<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.experiment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="25"
        android:targetSdkVersion="25" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >

        <!-- Main Activity (Now the Launch Activity) -->
        <activity android:name="com.example.experiment.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name="com.example.experiment.LoginActivity" />

        <!-- Student Dashboard Activity -->
        <activity android:name="com.example.experiment.StudentDashboardActivity" />

        <!-- Admin Dashboard Activity -->
        <activity android:name="com.example.experiment.AdminDashboardActivity" />

        <!-- Registration Activity -->
        <activity android:name="com.example.experiment.RegisterActivity" />

        <!-- Add this inside the <application> tag -->
        <activity android:name="com.example.experiment.ManageRecommendationsActivity" />
        <activity android:name="com.example.experiment.StudentLandingPage" />
        <activity android:name="com.example.experiment.CareerInfoActivity" />
        <activity android:name="com.example.experiment.CareerDetailActivity" />
    </application>

</manifest>